{
    "name": "markocupic/composer-file-copier-plugin",
    "description": "Copy files or mirroring folders from a package dist directory to the filesystem during 'composer install' or 'composer update'.",
    "type": "composer-plugin",
    "homepage": "https://github.com/markocupic/composer-file-copier-plugin",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "composer-plugin-api": "^2.0",
        "symfony/filesystem": "^4.0 || ^5.0 || ^6.0"
    },
    "require-dev": {
        "composer/composer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Markocupic\\Composer\\Plugin\\": "src/"
        }
    },
    "extra": {
        "class": "Markocupic\\Composer\\Plugin\\Plugin"
    }
}
